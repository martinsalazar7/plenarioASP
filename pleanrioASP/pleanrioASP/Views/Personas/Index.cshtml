@model IEnumerable<pleanrioASP.Data.Entities.Persona>

@{
    ViewData["Title"] = "Index";
}

<div class="mb-2">
    <a asp-action="Index" asp-route-sortOrder="@ViewData["OrdNomb"]">Ordenar por Nombre</a>&nbsp;&nbsp;
</div>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Buscar por nombre: <input type="text" name="Filtro" value="@ViewData["Filtro"]" />
            <input type="submit" value="Buscar" class="btn btn-warning" />
            <a asp-action="Index" class="btn btn-success">Limpiar Filtros</a>
        </p>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Agregar Persona</a>
</p>
<div class="row">
    <div class="col-md-12">
         <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaNacimiento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreditoMaximo)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaNacimiento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreditoMaximo)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info"><i class="fa-solid fa-circle-info"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"><i class="fa-solid fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
 }

